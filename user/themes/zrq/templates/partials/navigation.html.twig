{% macro loop(page) %}
    {% for p in page.children %}
        {% if p.visible %}
            {% set current_page = (p.active or p.activeChild) ? 'active' : '' %}
            <li class="{{ current_page }}">
                {% set withVisibleChildren = 0 %}
                {% for pp in p.children %}
                    {% if pp.visible %}
                        {% set withVisibleChildren = withVisibleChildren + 1 %}
                    {% endif %}
                {% endfor %}

                {% if withVisibleChildren != 0 %}
                    {{ p.menu }}
                {% else %}    
                    <a href="{{ p.url }}">
                        {% if p.header.icon %}
                            <i class="fa fa-{{ p.header.icon }}"></i>
                        {% endif %}
                        {{ p.menu }}
                    </a>
                {% endif %}

                {% if p.children.count > 0 %}
                    <ul>
                        {{ _self.loop(p) }}
                    </ul>
                {% endif %}
            </li>
        {% endif %}
    {% endfor %}
{% endmacro %}

{% if withSuperFish == "true" %}
    <ul class="sf-menu" id="super-fish-menu">
{% else %}
    <ul>
{% endif %}

{% if config.themes.zrq.dropdown.enabled %}
    {{ _self.loop(pages) }}
{% else %}
    {% for page in pages.children %}
        {% if page.visible %}
            {% set current_page = (page.active or page.activeChild) ? 'active' : '' %}
            <li class="{{ current_page }}">
                <a href="{{ page.url }}">                     
                    {{ page.menu }}
                </a>
            </li>
        {% endif %}
    {% endfor %}
{% endif %}
{% for mitem in site.menu %}
    <li>
        <a href="{{ mitem.url }}">
            {{ mitem.text }}
        </a>
    </li>
{% endfor %}
</ul>           