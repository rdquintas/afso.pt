{% extends 'partials/base.html.twig' %}
{% block content %}	
	<section class="page contactos">
		<h1>{{ page.title }}</h1>
		<div class="col-2">
			<form id="contact-form" action="{{ theme_url }}/assets/submit.php" method="post" novalidate="">
				<div class="form-group">
				    <input id="contact-name" name="contactName" placeholder="Nome">
				</div>

				<div class="form-group">
				    <input id="contact-mail" name="email" placeholder="Email">
			   	</div>

			    <div class="form-group">
				    <textarea id="contact-message" name="message" placeholder="Mensagem"></textarea>
	   			</div>

			    <div class="form-group">
			        <button name="submit" type="submit">Enviar</button>
			    </div>
			    <input type="hidden" name="submitted" id="submitted" value="true">
			</form>			
		</div>
		<div class="col-2">
			<h3>Os nossos contactos</h3>
			<div class="phone">
				<img src="{{ theme_url }}/images/phone.png">
				<p>{{ page.header.telefone }}</p>
			</div>
			<div class="email">
				<img src="{{ theme_url }}/images/email.png">
				<a href="mailto:{{ page.header.email }}<">{{ page.header.email }}</a>
			</div>
			<div class="facebook">
				<img src="{{ theme_url }}/images/facebook.png">
				<a href="http://wwww.facebook.com/afso" target="_blank">facebook.com/afso</a>
			</div>
		</div>
	</section>
{% endblock %}